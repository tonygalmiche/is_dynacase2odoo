<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- is.demande.modif.compte.fournisseur -->
        <record model="ir.ui.view" id="is_demande_modif_compte_fournisseur_form_view">
            <field name="name">is_demande_modif_compte_fournisseur_form_view</field>
            <field name="model">is.demande.modif.compte.fournisseur</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form">
                    <header>
                        <button 
                            name="lien_vers_dynacase_action"
                            string="Dynacase"
                            type="object"
                            attrs="{'invisible': [('dynacase_id', '=', 0)]}" 
                            groups="base.group_system"
                        />
                        <field name="dynacase_id" invisible="1"/>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/> 
                        <group>
                            <field name="titre"                     readonly="1"/>
                            <field name="societe_ids"               widget="many2many_tags"/>
                            <field name="num_ordre"                 readonly="1"/>
                            <field name="fournisseur_id"            attrs="{'readonly': [('state','!=','brouillon')]}"/>
                            <field name="fournisseur_autre"         attrs="{'readonly': [('state','!=','brouillon')]}"/>
                            <field name="code_fournisseur"          readonly="1"/>
                            <field name="code_fournisseur_creation" attrs="{'readonly': [('state','!=','brouillon')]}"/>
                            <field name="date_creation"             attrs="{'readonly': [('state','!=','brouillon')]}"/>
                            <field name="createur_id"               attrs="{'readonly': [('state','!=','brouillon')]}"/>
                            <field name="responsable_action_id"     attrs="{'readonly': [('state','!=','brouillon')]}"/>
                            <field name="motif"                     attrs="{'readonly': [('state','!=','brouillon')]}"/>
                        </group>
                        <!--group string="Pièces jointes">
                            <field name="piece_jointe_ids"   widget="many2many_binary" attrs="{'readonly': [('state','!=','brouillon')]}"/>
                        </group-->
                    </sheet>
                   <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="is_demande_modif_compte_fournisseur_tree_view">
                <field name="name">is_demande_modif_compte_fournisseur_tree_view</field>
                <field name="model">is.demande.modif.compte.fournisseur</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                <tree>
                    <field name="titre"/>
                    <field name="num_ordre"                 optional="show"/>
                    <field name="fournisseur_id"            optional="show" widget="many2one_clickable"/>
                    <field name="fournisseur_autre"         optional="show"/>
                    <field name="code_fournisseur"          optional="show"/>
                    <field name="code_fournisseur_creation" optional="show"/>
                    <field name="date_creation"             optional="show"/>
                    <field name="createur_id"               optional="show" widget="many2one_clickable"/>
                    <field name="responsable_action_id"     optional="show" widget="many2one_clickable"/>
                    <field name="motif"                     optional="show"/>
                    <field name="dynacase_id"               optional="hide" groups="base.group_system"/>
                    <button 
                        title="Dynacase" name="lien_vers_dynacase_action" type="object" icon="fa-file" 
                        attrs="{'invisible': [('dynacase_id', '=', 0)]}"
                        groups="base.group_system"
                    />

                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="is_demande_modif_compte_fournisseur_search">
            <field name="name">is_demande_modif_compte_fournisseur_search</field>
            <field name="model">is.demande.modif.compte.fournisseur</field>
            <field name="arch" type="xml">
                <search>
                    <field name="titre"/>
                    <field name="num_ordre"                 />
                    <field name="fournisseur_id"            />
                    <field name="fournisseur_autre"         />
                    <field name="code_fournisseur"          />
                    <field name="code_fournisseur_creation" />
                    <field name="date_creation"             />
                    <field name="createur_id"               />
                    <field name="responsable_action_id"     />
                    <field name="motif"                     />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_demande_modif_compte_fournisseur_action">
            <field name="name">Demande de création ou de modification d'un compte Fournisseur</field>
            <field name="res_model">is.demande.modif.compte.fournisseur</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}
            </field>
        </record>
    </data>
</odoo>
