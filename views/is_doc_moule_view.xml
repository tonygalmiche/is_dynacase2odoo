        <record id="is_doc_moule_kanban_view" model="ir.ui.view">
            <field name="name">is_doc_moule_kanban_view</field>
            <field name="model">is.doc.moule</field>
            <field name="arch" type="xml">
                <kanban create="0" quick_create="0">
                    <field name="param_project_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                 <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top mb-0">
                                        <div class="o_kanban_record_headings">
                                            <div style="background-color:Cornsilk"><field name="param_project_id" /></div>
                                            <field name="client_id" /><br />
                                            <div  attrs="{'invisible': [('dossier_modif_variante_id', '=', False)]}"><field name="dossier_modif_variante_id" /></div>
                                            <div  attrs="{'invisible': [('moule_dossierf', '=', False)]}">           <field name="moule_dossierf" /></div>
                                            <div  attrs="{'invisible': [('idproject', '=', False)]}">                <field name="idproject" /></div>
                                            <div  attrs="{'invisible': [('idresp', '=', False)]}">                   <field name="idresp" /></div>
                                            <field name="etat" /><br />
                                            <div  attrs="{'indicateur': [('idresp', '=', False)]}">                  <field name="indicateur" /></div>
                                            <field name="datecreate" /><br />
                                            <field name="dateend" /><br />
                                            <field name="dynacase_id" invisible="1" />
                                            <button 
                                                string="Dynacase" name="lien_vers_dynacase_action" type="object" class="btn btn-info"
                                                attrs="{'invisible': [('dynacase_id', '=', 0)]}" 
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="is_doc_moule_calendar_view" >
            <field name="name">is_doc_moule_calendar_view</field>
            <field name="model">is.doc.moule</field>
            <field name="arch" type="xml">
                <calendar 
                    date_start="date_debut_gantt" 
                    date_stop="date_fin_gantt" 
                    color="idresp" 
                    hide_time="false" 
                    event_limit="100"
