<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="is_doc_moule_form">
            <field name="name">is_doc_moule_form</field>
            <field name="model">is.doc.moule</field>
            <field name="priority" eval="1" />
            <field name="arch" type="xml">
                <form string="Document moule">
                    <header>
                        <field name="dynacase_id" invisible="1"/>
                        <button 
                            string="Dynacase" name="lien_vers_dynacase_action" type="object" class="btn btn-info"
                            attrs="{'invisible': [('dynacase_id', '=', 0)]}" 
                        />
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" invisible="1"/> 
                        <field name="project_prev" widget="html"/>
                        <group>
                            <group string="Caractéristiques" name="caracteristiques">
                                <field name="section_id"/>
                                <field name="sequence"/>
                                <field name="type_document" is_widget="background_color" options="[{'value':'Moule','color':'red'},{'value':'Article','color':'green'},{'value':'Dossier F','color':'orange'}]"/>
                                <field name="idmoule"                   attrs="{'invisible': [('type_document', '!=', 'Moule')]                 , 'required': [('type_document', '=', 'Moule')]}"/>
                                <field name="dossierf_id"               attrs="{'invisible': [('type_document', '!=', 'Dossier F')]             , 'required': [('type_document', '=', 'Dossier F')]}"/>
                                <field name="dossier_article_id"        attrs="{'invisible': [('type_document', '!=', 'Article')]               , 'required': [('type_document', '=', 'Article')]}" />
                                <field name="dossier_modif_variante_id" attrs="{'invisible': [('type_document', '!=', 'Dossier Modif Variante')], 'required': [('type_document', '=', 'Dossier Modif Variante')]}"/>
                                <field name="dossier_appel_offre_id"    attrs="{'invisible': [('type_document', '!=', 'dossier_appel_offre')]   , 'required': [('type_document', '=', 'dossier_appel_offre')]}"/>
                                <field name="moule_dossierf"  attrs="{'invisible': [('moule_dossierf', '=', False)]}" />
                                <field name="param_project_id" />
                                <field name="ppr_type_demande" attrs="{'invisible': [('type_document', '!=', 'Moule')]}" />
                                <field name="idproject" attrs="{'invisible': [('type_document', '!=', 'Moule')]}" readonly="1"/>
                                <field name="client_id" attrs="{'invisible': [('type_document', '!=', 'Moule')]}" readonly="1"/>
                                <field name="idcp"      attrs="{'invisible': [('type_document', '!=', 'Moule')]}" readonly="1"/>
                                <field name="idresp" />
                                <field name="site_id" />
                            </group>
                            <group string="Gestion des J" name="PLASFIL_FR_J">
                                <field name="j_prevue"/>
                                <field name="actuelle" readonly="1"/>
                                <field name="demande"/>
                                <field name="action" is_widget="background_color"/>
                                <field name="bloquant"  readonly="1"/>
                                <field name="etat" is_widget="background_color" options="[{'value':'AF','color':'red'},{'value':'F','color':'green'},{'value':'D','color':'orange'}]"/>
                                <field name="fin_derogation"  readonly="1"/>
                                <field name="coefficient"  readonly="1"/>
                                <field name="note" readonly="1" />
                                <field name="indicateur"  readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Dates"  name="PLASFIL_FR_DATE">
                                <field name="datecreate"  readonly="1"/>
                                <field name="dateend"/>
                            </group>
                            <group string="Gantt">
                                <field name="duree_attente_avant"/>
                                <field name="date_debut_gantt"/>
                                <field name="duree"/>
                                <field name="duree_gantt"    force_save="1"/>
                                <field name="date_fin_gantt" force_save="1"/>
                                <!-- 
                                <field name="dependance_idmoule"                   domain="[('idmoule','=',idmoule)]"                                     attrs="{'invisible': [('type_document', '!=', 'Moule')]}" />
                                <field name="dependance_dossierf_id"               domain="[('dossierf_id','=',dossierf_id)]"                             attrs="{'invisible': [('type_document', '!=', 'Dossier F')]}" />
                                <field name="dependance_dossier_article_id"        domain="[('dossier_article_id','=',dossier_article_id)]"               attrs="{'invisible': [('type_document', '!=', 'Article')]}" />
                                <field name="dependance_dossier_modif_variante_id" domain="[('dossier_modif_variante_id','=',dossier_modif_variante_id)]" attrs="{'invisible': [('type_document', '!=', 'Dossier Modif Variante')]}" />
                                <field name="dependance_dossier_appel_offre_id"    domain="[('dossier_appel_offre_id','=',dossier_appel_offre_id)]"       attrs="{'invisible': [('type_document', '!=', 'dossier_appel_offre')]}" /> 
                                <field name="dependance_id" readonly="1" force_save="1"/> 
                                -->
                                <field name="gantt_pdf"/>
                            </group>
                        </group>
                        <group string="Réponse à la demande" name="PLASFIL_FR_ANNEX">
                            <field name="array_ids" nolabel="1" colspan="2" attrs="{'invisible': [('ppr_type_demande', 'not in', ['PJ', 'PJ_TEXTE', 'PJ_DATE'] )] }">
                                <tree editable="bottom">
                                    <field name="lig"         optional="hide"/>
                                    <field name="annex_pdf"   optional="hide" widget="many2many_binary"/>
                                    <field name="annex"                       widget="many2many_binary"/>
                                    <field name="demandmodif" optional="hide"/>
                                    <field name="maj_amdec"   optional="hide"/>
                                    <field name="comment"     optional="hide" widget="text"/>
                                    <!-- <field name="rsp_date" attrs="{'column_invisible': [('parent.ppr_type_demande', 'not in', ['DATE', 'PJ_DATE'])]}"/> -->
                                    <!-- <field name="rsp_texte" attrs="{'column_invisible': [('parent.ppr_type_demande', 'not in', ['TEXTE'])]}"/> -->
                                </tree>
                            </field>
                            <field name="rsp_date"  attrs="{'invisible': [('ppr_type_demande', 'not in', ['DATE', 'PJ_DATE'])]}"/>
                            <field name="rsp_texte" attrs="{'invisible': [('ppr_type_demande', 'not in', ['TEXTE','PJ_TEXTE'])]}"/>
                        </group>
                        <group>
                            <field name="dynacase_id" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
