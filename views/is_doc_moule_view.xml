                    <field name="type_document" optional="show"/>
                    <field name="ppr_type_demande" optional="show" />
                    <button title="Gantt du moule" name="doc_moule_action" type="object" icon="fa-indent" attrs="{'invisible': [('idmoule', '=', False)]}"/>
                    <field name="idmoule"                   optional="show"           widget="many2one_clickable"/>
                    <button title="Gantt du Dossier F" name="doc_dossierf_action" type="object" icon="fa-indent" attrs="{'invisible': [('dossierf_id', '=', False)]}"/>
                    <field name="dossier_appel_offre_id"    optional="hide"           widget="many2one_clickable"/>
                    <field name="dossierf_id"               optional="hide"           widget="many2one_clickable"/>
                    <field name="dossier_modif_variante_id" optional="hide"           widget="many2one_clickable"/>
                    <field name="dossier_article_id"        optional="hide"           widget="many2one_clickable"/>
                    <field name="moule_dossierf"            optional="hide" />
                    <field name="site_id"                   optional="hide" />
                    <button title="Gantt du projet" name="doc_projet_action" type="object" icon="fa-indent" attrs="{'invisible': [('idproject', '=', False)]}"/>
                    <field name="idproject" optional="show"         widget="many2one_clickable"/>
                    <field name="client_id" optional="show"         widget="many2one_clickable"/>
                    <field name="idcp" optional="show"/>
                    <field name="idresp" optional="show" />
                    <field name="actuelle" optional="show" />
                    <field name="demande" optional="show" />
                    <field name="action"  optional="show"/>
                    <field name="bloquant" optional="show"/>
                    <field name="etat" optional="show" />
                    <field name="fin_derogation" optional="show" />
                    <field name="coefficient"  optional="show"/>
                    <field name="note"  optional="show"/>
                    <field name="indicateur"  optional="show"/>
                    <field name="datecreate" optional="show" />
                    <field name="dateend" optional="show" />
                    <field name="duree"               optional="hide" />
                    <field name="duree_gantt"         optional="hide"/>
                    <field name="date_debut_gantt"    optional="hide" />
                    <field name="date_fin_gantt"      optional="hide" />
                    <field name="duree_attente_avant" optional="hide" />
                    <field name="dependance_id"       optional="hide" widget="many2one_clickable"/>
                    <field name="gantt_pdf"           optional="hide"/>
                    <button title="Dynacase" name="lien_vers_dynacase_action" type="object" icon="fa-file" attrs="{'invisible': [('dynacase_id', '=', 0)]}"/>
                    <field name="dynacase_id"  optional="hide"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="is_doc_moule_edit_tree_view">
            <field name="name">is_doc_moule_edit_tree_view</field>
            <field name="model">is.doc.moule</field>
            <field name="priority" eval="90"/>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="section_id"       optional="show"/>
                    <field name='sequence'/>
