                    <field name="j_prevue"         optional="show"/>
                    <field name="idmoule"                          widget="many2one_clickable"/>
                    <field name="dossierf_id"      optional="show" widget="many2one_clickable"/>
                    <field name="moule_dossierf"   optional="hide" />
                    <field name="site_id"          optional="hide" />
                    <field name="idproject"        optional="show" widget="many2one_clickable"/>
                    <field name="client_id"        optional="show" widget="many2one_clickable"/>
                    <field name="idresp"/>
                    <field name="demande"/>
                    <field name="etat"/>
                    <field name="dateend"             optional="hide"/>
                    <field name="duree_attente_avant" optional="hide"/>
                    <field name="duree"/>
                    <field name="duree_gantt"         optional="hide" force_save="1"/>
                    <field name="date_debut_gantt"/>
                    <field name="date_fin_gantt"                      force_save="1"/>
