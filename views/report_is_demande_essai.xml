<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="is_demande_essai_template">
            <t t-set="company" t-value="res_company"/>
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="header is_demande_essai_header">
                        <table width="100%">
                            <tr>
                                <td width="15%" rowspan="2">
                                    <img t-if="company.is_logo" t-att-src="image_data_uri(company.is_logo)" style="max-height:60px;" alt="Logo"/>
                                </td>
                                <td width="65%" rowspan="2" style="font-size:16px;font-weight: bold;">
                                    Demande d'essai : <span t-field="o.num_essai"/>
                                </td>
                                <td width="20%">
                                    FO-0-BEI-13-5
                                </td>
                            </tr>
                             <tr>
                                <td><div>Page <span class="page" />/<span class="topage" /></div> </td>
                            </tr>
                        </table>
                    </div>
                    <div class="page is_demande_essai_page">
                        <h1>Identification</h1>
                        <table width="100%">
                            <tr><th style="width:40%">Type essai : </th><td><span t-field="o.type_essai"/></td></tr>
                            <tr><th>N°essai : </th><td><span t-field="o.num_essai"/></td></tr>
                            <tr><th>Date : </th><td><span t-field="o.date"/></td></tr>
                            <tr><th>Demandeur : </th><td><span t-field="o.user_id"/></td></tr>
                            <tr><th>Moule / Assemblage : </th><td><span t-field="o.moule_id.name"/><span t-field="o.dossierf_id.name"/> <span t-field="o.designation"/></td></tr>
                            <tr><th>Date de disponibilité de l'outillage : </th><td><span t-field="o.date_disp_out"/></td></tr>
                            <tr><th>Lieu essai : </th><td>
                                <div t-if="o.lieu_essai_id"    t-field="o.lieu_essai_id"/>
                                <div t-if="o.lieu_essai_autre" t-field="o.lieu_essai_autre"/>
                            </td></tr>
                            <tr><th>Responsable de l'essai : </th><td><span t-field="o.resp_essai_id"/></td></tr>
                            <tr><th>Responsable du planning : </th><td><span t-field="o.resp_planning_id"/></td></tr>
                            <tr><th>Semaine ou jour de réalisation de l'essai : </th><td><span t-field="o.semaine_essai"/></td></tr>
                            <tr><th>Commentaire traçabilité : </th><td><span t-field="o.ident_commentaire"/></td></tr>
                            <tr><th>Temps d'immobilisation : </th><td><span t-field="o.temp_immob"/></td></tr>
                            <tr><th>Commentaire : </th><td><span t-field="o.identification_cmt"/></td></tr>
                            <tr><th>Nombre de pièces pour le client : </th><td><span t-field="o.nb_pieces_client"/></td></tr>
                            <tr><th>Nombre de pièces pour la métrologie : </th><td><span t-field="o.nb_pieces_metrologie"/></td></tr>
                            <tr><th>Nombre de pièces pour le chef de projet : </th><td><span t-field="o.nb_pieces_chef_projet"/></td></tr>
                            <tr><th>Commentaire nb pièces : </th><td><span t-field="o.nb_pieces_comenntaire"/></td></tr>
                            <tr><th>Identification particulière : </th><td>
                                <div t-if="o.identification_particuliere"       t-field="o.identification_particuliere"/>
                                <div t-if="o.identification_particuliere_autre" t-field="o.identification_particuliere_autre"/>
                            </td></tr>
                            <tr><th>Besoin MOD : </th><td><span t-field="o.besoin_mod"/></td></tr>
                        </table>
                        <h1>Matières / Colorant</h1>
                        <table width="100%">
                            <tr><th style="width:40%">Code matière 1 : </th><td><span t-field="o.code_matiere_id"/></td></tr>
                            <tr><th>Désignation matière 1 :            </th><td><span t-field="o.designation_mat"/></td></tr>
                            <tr><th>Lieu de stockage de la matière 1 : </th><td><span t-field="o.lieu_stockage_matiere"/></td></tr>
                            <tr><th>Matière 1 disponible :             </th><td><span t-field="o.mat_disp"/></td></tr>

                            <tr t-if="o.designation_mat2"><th>Code matière 2 :                   </th><td><span t-field="o.code_matiere2_id"/></td></tr>
                            <tr t-if="o.designation_mat2"><th>Désignation matière 2 :            </th><td><span t-field="o.designation_mat2"/></td></tr>
                            <tr t-if="o.designation_mat2"><th>Lieu de stockage de la matière 2 : </th><td><span t-field="o.lieu_stockage_matiere2"/></td></tr>
                            <tr t-if="o.designation_mat2"><th>Matière 2 disponible :             </th><td><span t-field="o.mat_disp2"/></td></tr>
                            
                            <tr><th>Code colorant : </th><td><span t-field="o.code_colorant_id"/></td></tr>
                            <tr><th>Désignation : </th><td><span t-field="o.designation_col"/></td></tr>
                            <tr><th>Lieu de stockage du colorant : </th><td><span t-field="o.lieu_stockage_colorant"/></td></tr>
                            <tr><th>% de colorant : </th><td><span t-field="o.pourcent_colorant"/></td></tr>
                            <tr>
                                <th>Fiche technique matière : </th>
                                <td>
                                    <t t-foreach="o.fiche_tech_mat_ids" t-as="fiche_tech_mat">
                                        <div t-esc="fiche_tech_mat.name"/>
                                    </t>
                                </td>
                            </tr>
                        </table>

                        <h1>Données économiques</h1>
                        <table width="100%" class="is_demande_essai_donnees_economique">
                            <tr><th></th><td><b>Ojectif / Target</b></td><td><b>Résultat / Result</b></td></tr>
                            <tr><th>Tps cycle / Time cycle(s) :  </th><td><span t-field="o.tps_cycle_objectif"/>  </td><td><span t-field="o.tps_cycle_resultat"/></td></tr>
                            <tr><th>Poids pièce / Part weight :  </th><td><span t-field="o.poids_piece_objectif"/></td><td><span t-field="o.poids_piece_resultat"/></td></tr>
                            <tr><th>Presse / Injection machine : </th><td><span t-field="o.presse_objectif_id"/>  </td><td><span t-field="o.presse_resultat_id"/></td></tr>
                            <tr><th>Nbre MO / Handwork number :  </th><td><span t-field="o.nb_mo_objectif"/>      </td><td><span t-field="o.nb_mo_resultat"/></td></tr>
                        </table>

                        <h1>Métrologie</h1>
                        <table width="100%">
                            <tr><th style="width:40%">Responsable métrologie : </th><td><span t-field="o.resp_metrologie_id"/></td></tr>
                        </table>
                    </div>               
                    
                    <div class="footer">
                        Page <span class="page"/>/<span class="topage"/>
                    </div>
                    <p style="page-break-before:always;"> </p>
                </t>
            </t>
        </template>
        <record id="is_demande_essai_paperformat" model="report.paperformat">
            <field name="name">Demande d'essai</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>

        <record id="is_demande_essai_report" model="ir.actions.report">
            <field name="name">Demande d'essai</field>
            <field name="model">is.demande.essai</field>
            <field name="binding_model_id" ref="model_is_demande_essai"/>
            <field name="paperformat_id" ref="is_demande_essai_paperformat"/>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">is_dynacase2odoo.is_demande_essai_template</field>
            <field name="report_file">is_dynacase2odoo.is_demande_essai_template</field>
        </record>
    </data>
</odoo>
