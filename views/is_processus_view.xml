<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- is.processus -->
        <record id="is_processus_search" model="ir.ui.view">
            <field name="name">is.processus.search</field>
            <field name="model">is.processus</field>
            <field name="arch" type="xml">
                <search string="Recherche Processus">
                    <field name="numpcs"/>
                    <field name="numindice"/>
                    <field name="nom"/>
                    <filter string="Avec pilote" name="with_pilot" domain="[('pilotepcs_id','!=', False)]"/>
                </search>
            </field>
        </record>
        <record id="is_processus_tree" model="ir.ui.view">
            <field name="name">is.processus.tree</field>
            <field name="model">is.processus</field>
            <field name="arch" type="xml">
                <tree string="Processus">
                    <field name="numpcs" optional="show"/>
                    <field name="numindice" optional="show"/>
                    <field name="nom" optional="show"/>
                    <field name="pilotepcs_id" optional="show"/>
                    <field name="niveau" optional="show"/>
                    <field name="exigence" optional="hide"/>
                    <field name="element" optional="hide"/>
                    <field name="donneesentree" optional="hide"/>
                    <field name="donneessortie" optional="hide"/>
                    <field name="finalite" optional="hide"/>
                    <field name="efficience" optional="hide"/>
                    <field name="efficacite" optional="hide"/>
                    <field name="quiverifie_id" optional="show"/>
                    <field name="quiapprouve_id" optional="show"/>
                    <field name="diffusion" optional="hide"/>
                    <field name="create_date" optional="hide" string="Créé le"/>
                    <field name="create_uid" optional="hide" string="Créé par"/>
                    <field name="write_date" optional="hide" string="Modifié le"/>
                    <field name="write_uid" optional="hide" string="Modifié par"/>
                    <button 
                        title="Dynacase" name="lien_vers_dynacase_action" type="object" icon="fa-file" 
                        attrs="{'invisible': [('dynacase_id', '=', 0)]}"
                        groups="base.group_system"
                    />
                    <field name="dynacase_id" optional="hide" groups="base.group_system"/>
                </tree>
            </field>
        </record>
        <record id="is_processus_form" model="ir.ui.view">
            <field name="name">is.processus.form</field>
            <field name="model">is.processus</field>
            <field name="arch" type="xml">
                <form string="Processus">
                    <header>
                        <field name="active" invisible="1"/>
                        <button 
                            string="Dynacase" name="lien_vers_dynacase_action"
                            type="object" class="btn btn-info"
                            attrs="{'invisible': [('dynacase_id', '=', 0)]}" 
                            groups="base.group_system"
                        />
                        <field name="dynacase_id" groups="base.group_system" invisible="1"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group string="Identification">
                                <field name="numpcs" required="1"/>
                                <field name="numindice" required="1"/>
                                <field name="nom" required="1"/>
                                <field name="niveau" required="1"/>
                                <field name="pilotepcs_id" required="1"/>
                                <field name="exigence"/>
                            </group>

                            <group string="Contenu">>
                                <field name="element" widget="text"/>
                                <field name="donneesentree" widget="text"/>
                                <field name="donneessortie" widget="text"/>
                                <field name="finalite" widget="text"/>
                                <field name="efficience" widget="text"/>
                                <field name="efficacite" widget="text"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cycle">
                                <group>
                                    <group>
                                        <field name="quiverifie_id"/>
                                        <field name="quiapprouve_id"/>
                                        <field name="diffusion"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Étapes du processus">
                                <field name="etape_ids">
                                    <tree string="Étapes" editable="bottom">
                                        <field name="numetape"/>
                                        <field name="description"/>
                                        <field name="responsable"/>
                                        <field name="pilote_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Documents du processus">
                                <field name="doc_ids">
                                    <tree string="Documents">
                                        <button name="action_view_document" type="object" icon="fa-search" title="Voir la fiche complète"/>
                                        <field name="reference"/>
                                        <field name="designation"/>
                                        <field name="etape_id"/>
                                        <field name="auteur_id"/>
                                        <field name="version"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="is_processus_action" model="ir.actions.act_window">
            <field name="name">Processus</field>
            <field name="res_model">is.processus</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="is_processus_search"/>
            <field name="context">{}</field>
        </record>
        <record id="is_cartographie_processus_action" model="ir.actions.client">
            <field name="name">Cartographie des processus</field>
            <field name="tag">is_dynacase2odoo.cartographie_processus</field>
        </record>


        <!-- is.processus.etape -->
        <record id="is_processus_etape_search" model="ir.ui.view">
            <field name="name">is.processus.etape.search</field>
            <field name="model">is.processus.etape</field>
            <field name="arch" type="xml">
                <search string="Recherche Étapes des processus">
                    <field name="numetape"/>
                    <field name="description"/>
                    <field name="processus_id" widget="many2one_clickable" />
                    <field name="responsable"/>
                    <field name="pilote_id"/>
                    <filter string="Actif" name="active" domain="[('active','=', True)]"/>
                    <filter string="Archivé" name="inactive" domain="[('active','=', False)]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Processus" name="group_by_processus" domain="[]" context="{'group_by':'processus_id'}"/>
                        <filter string="Pilote" name="group_by_pilote" domain="[]" context="{'group_by':'pilote_id'}"/>
                        <filter string="Responsable" name="group_by_responsable" domain="[]" context="{'group_by':'responsable'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="is_processus_etape_tree" model="ir.ui.view">
            <field name="name">is.processus.etape.tree</field>
            <field name="model">is.processus.etape</field>
            <field name="arch" type="xml">
                <tree string="Étapes des processus">
                    <field name="processus_id" optional="show" widget="many2one_clickable" />
                    <field name="numetape" optional="show"/>
                    <field name="description" optional="show"/>
                    <field name="responsable" optional="show"/>
                    <field name="pilote_id" optional="show"/>
                    <field name="active" optional="hide"/>
                    <field name="create_date" optional="hide" string="Créé le"/>
                    <field name="create_uid" optional="hide" string="Créé par"/>
                    <field name="write_date" optional="hide" string="Modifié le"/>
                    <field name="write_uid" optional="hide" string="Modifié par"/>
                    <button 
                        title="Dynacase" name="lien_vers_dynacase_action" type="object" icon="fa-file" 
                        attrs="{'invisible': [('dynacase_id', '=', 0)]}"
                        groups="base.group_system"
                    />
                    <field name="dynacase_id" optional="hide" groups="base.group_system"/>
                </tree>
            </field>
        </record>
        <record id="is_processus_etape_form" model="ir.ui.view">
            <field name="name">is.processus.etape.form</field>
            <field name="model">is.processus.etape</field>
            <field name="arch" type="xml">
                <form string="Étape du processus">
                    <header>
                        <field name="active" invisible="1"/>
                        <button 
                            string="Dynacase" name="lien_vers_dynacase_action"
                            type="object" class="btn btn-info"
                            attrs="{'invisible': [('dynacase_id', '=', 0)]}" 
                            groups="base.group_system"
                        />
                        <field name="dynacase_id" groups="base.group_system" invisible="1"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group string="Identification">
                            <group>
                                <field name="processus_id" required="1"/>
                                <field name="numetape"/>
                                <field name="responsable"/>
                            </group>
                            <group>
                                <field name="pilote_id"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description" widget="text" nolabel="1" colspan="2"/>
                        </group>
                        <group string="Documents">
                            <field name="doc_ids" nolabel="1" colspan="2">
                                <tree>
                                    <button name="action_view_document" type="object" icon="fa-search" title="Voir la fiche complète"/>
                                    <field name="reference"/>
                                    <field name="designation"/>
                                    <field name="etape_id"/>
                                    <field name="auteur_id"/>
                                    <field name="version"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="is_processus_etape_action" model="ir.actions.act_window">
            <field name="name">Étapes des processus</field>
            <field name="res_model">is.processus.etape</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="is_processus_etape_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>




        <!-- is.processus.doc -->
        <record id="is_processus_doc_search" model="ir.ui.view">
            <field name="name">is.processus.doc.search</field>
            <field name="model">is.processus.doc</field>
            <field name="arch" type="xml">
                <search string="Recherche Documents des processus">
                    <field name="reference"/>
                    <field name="designation"/>
                    <field name="processus_id"/>
                    <field name="etape_id"/>
                    <field name="auteur_id"/>
                    <field name="pilote_id"/>
                    <filter string="Actif" name="active" domain="[('active','=', True)]"/>
                    <filter string="Archivé" name="inactive" domain="[('active','=', False)]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Processus" name="group_by_processus" domain="[]" context="{'group_by':'processus_id'}"/>
                        <filter string="Étape" name="group_by_etape" domain="[]" context="{'group_by':'etape_id'}"/>
                        <filter string="Auteur" name="group_by_auteur" domain="[]" context="{'group_by':'auteur_id'}"/>
                        <filter string="Pilote" name="group_by_pilote" domain="[]" context="{'group_by':'pilote_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="is_processus_doc_tree" model="ir.ui.view">
            <field name="name">is.processus.doc.tree</field>
            <field name="model">is.processus.doc</field>
            <field name="arch" type="xml">
                <tree string="Documents des processus">
                    <field name="reference"        optional="show"/>
                    <field name="designation"      optional="show"/>
                    <field name="processus_id"     optional="show" widget="many2one_clickable" />
                    <field name="etape_id"         optional="hide" widget="many2one_clickable" />
                    <field name="procedure_id"     optional="hide" widget="many2one_clickable" />
                    <field name="pilote_id"        optional="show"/>
                    <field name="auteur_id"        optional="show"/>
                    <field name="site_id"          optional="hide"/>
                    <field name="niveau"           optional="hide"/>
                    <field name="version"          optional="show"/>
                    <field name="modification"     optional="hide"/>
                    <field name="quiremplit_id"    optional="hide"/>
                    <field name="quiclasse_id"     optional="hide"/>
                    <field name="lieuclassement"   optional="hide"/>
                    <field name="quiarchive_id"    optional="hide"/>
                    <field name="lieuarchive"      optional="hide"/>
                    <field name="reglerange"       optional="hide"/>
                    <field name="dureecons"        optional="hide"/>
                    <field name="quidetruit_id"    optional="hide"/>
                    <field name="quiverifie_id"    optional="hide"/>
                    <field name="quiapprouve_id"   optional="hide"/>
                    <field name="diffusion"        optional="hide"/>
                    <field name="active"           optional="hide"/>
                    <field name="create_date"      optional="hide" string="Créé le"/>
                    <field name="create_uid"       optional="hide" string="Créé par"/>
                    <field name="write_date"       optional="hide" string="Modifié le"/>
                    <field name="write_uid"        optional="hide" string="Modifié par"/>
                    <button 
                        title="Dynacase" name="lien_vers_dynacase_action" type="object" icon="fa-file" 
                        attrs="{'invisible': [('dynacase_id', '=', 0)]}"
                        groups="base.group_system"
                    />
                    <field name="dynacase_id" optional="hide" groups="base.group_system"/>
                </tree>
            </field>
        </record>
        <record id="is_processus_doc_form" model="ir.ui.view">
            <field name="name">is.processus.doc.form</field>
            <field name="model">is.processus.doc</field>
            <field name="arch" type="xml">
                <form string="Document du processus">
                    <header>
                        <field name="active" invisible="1"/>                        
                        <button 
                            string="Dynacase" name="lien_vers_dynacase_action"
                            type="object" class="btn btn-info"
                            attrs="{'invisible': [('dynacase_id', '=', 0)]}" 
                            groups="base.group_system"
                        />
                        <field name="dynacase_id" groups="base.group_system" invisible="1"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        
                        <group string="Identification du processus">
                            <group>
                                <field name="processus_id"/>
                                <field name="etape_id"/>
                                <field name="procedure_id"/>
                            </group>
                            <group>
                                <field name="pilote_id"/>
                            </group>
                        </group>

                        <group string="Identification du document">
                            <group>
                                <field name="reference" required="1"/>
                                <field name="designation"/>
                                <field name="niveau"/>
                                <field name="version"/>
                                <field name="modification"/>
                            </group>
                            <group>
                                <field name="auteur_id"/>
                                <field name="piecejointe" filename="reference"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Organisation (FO)">
                                <group>
                                    <group string="Qui remplit / Qui classe">
                                        <field name="quiremplit_id"/>
                                        <field name="quiclasse_id"/>
                                        <field name="lieuclassement"/>
                                    </group>
                                    <group string="Archivage / Destruction">
                                        <field name="quiarchive_id"/>
                                        <field name="lieuarchive"/>
                                        <field name="reglerange"/>
                                        <field name="dureecons"/>
                                        <field name="quidetruit_id"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Diffusion">
                                <group>
                                    <group>
                                        <field name="quiverifie_id"/>
                                        <field name="quiapprouve_id"/>
                                        <field name="diffusion"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Étapes du document">
                                <field name="etape_doc_ids">
                                    <tree string="Étapes" editable="bottom">
                                        <button name="open_etape_doc" type="object" icon="fa-search" title="Voir la fiche étape"/>
                                        <field name="numeroetape"/>
                                        <field name="nometape"/>
                                        <field name="responsable_id"/>
                                        <field name="description"/>
                                        <field name="doclibre"/>
                                    </tree>
                                </field>
                                <field name="etape_doc_texte" invisible="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="is_processus_doc_action" model="ir.actions.act_window">
            <field name="name">Documents des processus</field>
            <field name="res_model">is.processus.doc</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="is_processus_doc_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>


        <!-- is.processus.doc.etape -->
        <record id="is_processus_doc_etape_form" model="ir.ui.view">
            <field name="name">is.processus.doc.etape.form</field>
            <field name="model">is.processus.doc.etape</field>
            <field name="arch" type="xml">
                <form string="Étape du document">
                    <sheet>
                        <group string="Identification">
                            <field name="doc_id"/>
                            <field name="numeroetape"/>
                            <field name="nometape"/>
                            <field name="responsable_id"/>
                        </group>
                        <group string="Description">
                            <field name="description" widget="text"/>
                        </group>
                        <group string="Document libre">
                            <field name="doclibre" widget="text"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


    </data>
</odoo>
