<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- is.oberthur -->
        <record model="ir.ui.view" id="is_oberthur_saisie_1_view">
            <field name="name">is_oberthur_saisie_1_view</field>
            <field name="model">is.oberthur</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form" delete="0">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <field name="montage_coque_alerte" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="alert alert-warning text-center" role="alert" attrs="{'invisible': [('montage_coque_alerte', 'in', ['', False])]}">
                            <field name="montage_coque_alerte" nolabel="1"/>
                        </div>
                        <group>
                            <field name="montage"/>
                            <field name="coque"/>
                            <field name="date_heure_saisie"/>
                            <field name="harnais" force_save="1" attrs="{'readonly': [('modif', '==', False)]}"/>
                            <field name="numof"   force_save="1" attrs="{'readonly': [('modif', '==', False)]}"/>
                            <field name="continu1" required="1"/>
                            <field name="tensiong" required="1"/>
                            <field name="tensiond" required="1"/>
                            <field name="bransubd" required="1"/>
                            <field name="blocvis"  required="1"/>
                            <field name="modif"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="is_oberthur_saisie_2_view">
            <field name="name">is_oberthur_saisie_2_view</field>
            <field name="model">is.oberthur</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form" delete="0">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <field name="montage_coque_alerte" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="alert alert-warning text-center" role="alert" attrs="{'invisible': [('montage_coque_alerte', 'in', ['', False])]}">
                            <field name="montage_coque_alerte" nolabel="1"/>
                        </div>
                        <group>
                            <field name="montage"   readonly="1"/>
                            <field name="coque"     readonly="1"/>
                            <field name="batterie"  readonly="1"/>
                            <field name="harnais"   readonly="1"/>
                            <field name="numof"     readonly="1"/>
                            <field name="soudure"   required="1"/>
                            <field name="continu2"  required="1"/>
                            <field name="ctrelect"  required="1"/>
                            <field name="operateu"  required="1"/>
                            <field name="operateu2"/>
                            <field name="controle"  required="1"/>
                            <field name="reprise"/>
                            <field name="comment"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="is_oberthur_saisie_complete_view">
            <field name="name">is_oberthur_saisie_complete_view</field>
            <field name="model">is.oberthur</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form" delete="0">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <field name="montage_coque_alerte" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="alert alert-warning text-center" role="alert" attrs="{'invisible': [('montage_coque_alerte', 'in', ['', False])]}">
                            <field name="montage_coque_alerte" nolabel="1"/>
                        </div>
                        <group>
                            <group string="Identification">
                                <field name="montage"  readonly="1"/>
                                <field name="coque"    readonly="1"/>
                                <field name="batterie" readonly="1"/>
                                <field name="harnais"  readonly="1"/>
                                <field name="numof"    readonly="1"/>
                                <field name="date_heure_saisie"/>
                            </group>
                            <group string="Contrôles">
                                <field name="continu1" required="1"/>
                                <field name="tensiong" required="1"/>
                                <field name="tensiond" required="1"/>
                                <field name="bransubd" required="1"/>
                                <field name="blocvis"  required="1"/>
                                <field name="soudure"  required="1"/>
                                <field name="continu2" required="1"/>
                                <field name="ctrelect" required="1"/>
                            </group>
                            <group string="Opérateurs">
                                <field name="operateu"  required="1"/>
                                <field name="operateu2" required="1"/>
                                <field name="controle"  required="1"/>
                            </group>
                            <group string="Divers">
                                <field name="reprise"/>
                                <field name="comment"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="is_oberthur_tree_view">
            <field name="name">is_oberthur_view</field>
            <field name="model">is.oberthur</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree delete="0">
                    <field name="montage"/>
                    <field name="coque"/>
                    <field name="harnais"/>
                    <field name="numof"/>
                    <field name="batterie" optional="hide"/>
                    <field name="continu1" optional="hide"/>
                    <field name="tensiong" optional="hide"/>
                    <field name="tensiond" optional="hide"/>
                    <field name="bransubd" optional="hide"/>
                    <field name="blocvis" optional="hide"/>
                    <field name="soudure" optional="hide"/>
                    <field name="continu2" optional="hide"/>
                    <field name="ctrelect" optional="hide"/>
                    <field name="date" optional="show"/>
                    <field name="heure" optional="show"/>
                    <field name="date_heure_saisie" optional="show"/>
                    <field name="operateu" optional="hide"/>
                    <field name="operateu2" optional="hide"/>
                    <field name="controle" optional="hide"/>
                    <field name="reprise" optional="hide"/>
                    <field name="comment" optional="hide"/>
                    <field name="create_date"                optional="hide" string="Créé le"/>
                    <field name="create_uid"                 optional="hide" string="Créé par"/>
                    <field name="write_date"                 optional="hide" string="Modifié le"/>
                    <field name="write_uid"                  optional="hide" string="Modifié par"/>
                </tree>
        </field>
        </record>
        <record model="ir.ui.view" id="is_oberthur_search">
            <field name="name">is_oberthur_search</field>
            <field name="model">is.oberthur</field>
            <field name="arch" type="xml">
                <search>
                    <field name="montage"/>
                    <field name="coque"/>
                    <field name="batterie"/>
                    <field name="harnais"/>
                    <field name="numof"/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_oberthur_nouvelle_saisie_action">
            <field name="name">Nouvelle saisie</field>
            <field name="res_model">is.oberthur</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="is_oberthur_saisie_1_view"/>
            <field name="target">current</field>
        </record>
        <record model="ir.actions.act_window" id="is_oberthur_liste_saisies_action">
            <field name="name">Liste des saisies</field>
            <field name="res_model">is.oberthur</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('is_oberthur_tree_view'), 'sequence': 1}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('is_oberthur_saisie_complete_view'), 'sequence': 2})
            ]"/>
            <field name="context">{'create': False}</field>
        </record>


        <!-- is.oberthur.combinaison -->
        <record model="ir.ui.view" id="is_oberthur_combinaison_tree_view">
            <field name="name">is_oberthur_combinaison_tree_view</field>
            <field name="model">is.oberthur.combinaison</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="montage"/>
                    <field name="coque"/>
                    <field name="nb_car"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="is_oberthur_combinaison_form_view">
            <field name="name">is_oberthur_combinaison_form_view</field>
            <field name="model">is.oberthur.combinaison</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="montage"/>
                            <field name="coque"/>
                            <field name="nb_car"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_oberthur_combinaison_action">
            <field name="name">Combinaisons Montage/Coque</field>
            <field name="res_model">is.oberthur.combinaison</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
