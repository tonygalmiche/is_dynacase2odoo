<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="is_oberthur_saisie_1_view">
            <field name="name">is_oberthur_saisie_1_view</field>
            <field name="model">is.oberthur</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form" delete="0">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <field name="montage"/>
                            <field name="coque"/>
                            <field name="harnais" attrs="{'readonly': [('modif', '==', False)]}"/>
                            <field name="numof" attrs="{'readonly': [('modif', '==', False)]}"/>
                            <field name="continu1"/>
                            <field name="tensiong"/>
                            <field name="tensiond"/>
                            <field name="bransubd"/>
                            <field name="blocvis"/>
                            <field name="modif"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="is_oberthur_saisie_2_view">
            <field name="name">is_oberthur_saisie_2_view</field>
            <field name="model">is.oberthur</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Form" delete="0">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <field name="montage"/>
                            <field name="coque"/>
                            <field name="batterie"/>
                            <field name="harnais"/>
                            <field name="numof"/>
                            <field name="soudure"/>
                            <field name="continu2"/>
                            <field name="ctrelect"/>
                            <field name="operateu"/>
                            <field name="operateu2"/>
                            <field name="controle"/>
                            <field name="reprise"/>
                            <field name="comment"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="is_oberthur_tree_view">
            <field name="name">is_oberthur_view</field>
            <field name="model">is.oberthur</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree delete="0">
                    <field name="montage"/>
                    <field name="coque"/>
                    <field name="harnais"/>
                    <field name="numof"/>
                    <field name="batterie" optional="hide"/>
                    <field name="continu1" optional="hide"/>
                    <field name="tensiong" optional="hide"/>
                    <field name="tensiond" optional="hide"/>
                    <field name="bransubd" optional="hide"/>
                    <field name="blocvis" optional="hide"/>
                    <field name="soudure" optional="hide"/>
                    <field name="continu2" optional="hide"/>
                    <field name="ctrelect" optional="hide"/>
                    <field name="date" optional="show"/>
                    <field name="heure" optional="show"/>
                    <field name="date_heure_saisie" optional="show"  widget="float_time"/>
                    <field name="operateu" optional="hide"/>
                    <field name="operateu2" optional="hide"/>
                    <field name="controle" optional="hide"/>
                    <field name="reprise" optional="hide"/>
                    <field name="comment" optional="hide"/>
                    <field name="create_date"                optional="hide" string="Créé le"/>
                    <field name="create_uid"                 optional="hide" string="Créé par"/>
                    <field name="write_date"                 optional="hide" string="Modifié le"/>
                    <field name="write_uid"                  optional="hide" string="Modifié par"/>
                </tree>
        </field>
        </record>
        <record model="ir.ui.view" id="is_oberthur_search">
            <field name="name">is_oberthur_search</field>
            <field name="model">is.oberthur</field>
            <field name="arch" type="xml">
                <search>
                    <field name="montage"/>
                    <field name="coque"/>
                    <field name="batterie"/>
                    <field name="harnais"/>
                    <field name="numof"/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="is_oberthur_saisie_1_action">
            <field name="name">Oberthur saisie 1</field>
            <field name="res_model">is.oberthur</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('is_oberthur_tree_view'), 'sequence': 1}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('is_oberthur_saisie_1_view'), 'sequence': 2})
            ]"/>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window" id="is_oberthur_saisie_2_action">
            <field name="name">Oberthur saisie 2</field>
            <field name="res_model">is.oberthur</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('is_oberthur_tree_view'), 'sequence': 1}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('is_oberthur_saisie_2_view'), 'sequence': 2})
            ]"/>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
