<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue formulaire du wizard -->
        <record id="is_oberthur_recherche_montage_wizard_form" model="ir.ui.view">
            <field name="name">is.oberthur.recherche.montage.wizard.form</field>
            <field name="model">is.oberthur.recherche.montage.wizard</field>
            <field name="arch" type="xml">
                <form string="Recherche Montage 1ier Flux">
                    <sheet>
                        <group>
                            <field name="montage"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Rechercher" name="action_rechercher" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir le wizard -->
        <record id="is_oberthur_recherche_montage_wizard_action" model="ir.actions.act_window">
            <field name="name">Oberthur saisie 2</field>
            <field name="res_model">is.oberthur.recherche.montage.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
